source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '8.1'

inhibit_all_warnings!
use_frameworks!

target :victorious do
    pod 'RestKit'
    pod 'TTTAttributedLabel'
    pod 'MBProgressHUD'
    pod 'FlurrySDK'
    pod 'KVOController'
    pod 'SDWebImage'
    pod 'CCHLinkTextView'
    pod 'OAStackView'
    link_with 'victorious'

    target :test do
        pod 'Nocilla', :git => 'https://github.com/TouchFrame/Nocilla.git', :branch => 'block-response'
        link_with 'victoriousTests', 'VictoriousCommonTests'
    end
end

target 'UIAutomationTests', :exclusive => true do
  pod 'KIF', :git => 'https://github.com/TouchFrame/KIF.git'
end
